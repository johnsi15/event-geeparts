<form>
  <div class='grid gap-6 mb-6 grid-cols-1 md:grid-cols-2'>
    <div>
      <label for='type_person' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
        >Seleccione una opción</label
      >
      <select
        id='type_person'
        class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
      >
        <!-- <option selected>Tipo de persona</option> -->
        <option value='detal'>Detal</option>
        <option value='mayor'>Mayor</option>
      </select>
    </div>
    <div>
      <label for='first_name' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Nombres</label>
      <input
        type='text'
        id='first_name'
        class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
        placeholder='John'
        required
      />
    </div>
    <div>
      <label for='last_name' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Apellidos</label>
      <input
        type='text'
        id='last_name'
        class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
        placeholder='Serrano'
        required
      />
    </div>
    <div class='motorcycle'>
      <label for='motorcycle' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
        >¿Qué moto tiene?</label
      >
      <input
        type='text'
        id='motorcycle'
        class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
        placeholder='Pulsar NS 160 FI'
        required
      />
    </div>
    <div class='city hidden'>
      <label for='city' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Ciudad</label>
      <input
        type='text'
        id='city'
        class='block bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
        placeholder='Cúcuta'
        required
      />
    </div>
    <div>
      <label for='phone' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Número de celular</label>
      <input
        type='tel'
        id='phone'
        class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
        placeholder='3043538612'
        pattern='[0-9]{3}[0-9]{3}[0-9]{4}'
        required
      />
    </div>
    <div>
      <label for='email' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Correo electrónico</label>
      <input
        type='email'
        id='email'
        class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white outline-none focus:ring-geeparts-300 focus:border-geeparts-300'
        placeholder='me@johnserrano.co'
        required
      />
    </div>
  </div>
  <button
    type='submit'
    class='text-black bg-geeparts-300 hover:bg-geeparts-500 outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-geeparts-300 dark:hover:bg-geeparts-500'
    >Enviar correo</button
  >
</form>

<script>
  const select = document.getElementById('type_person')
  const city = document.querySelector('.city')
  const motorcycle = document.querySelector('.motorcycle')

  select?.addEventListener('change', event => {
    const select = event.target as HTMLSelectElement

    if (select.value === 'detal') {
      city?.classList.remove('block')
      city?.classList.add('hidden')
      motorcycle?.classList.remove('hidden')
      motorcycle?.classList.add('block')
    } else {
      city?.classList.remove('hidden')
      city?.classList.add('block')
      motorcycle?.classList.remove('block')
      motorcycle?.classList.add('hidden')
    }
  })
</script>
